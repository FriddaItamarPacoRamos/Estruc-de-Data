#include <iostream>
using namespace std;
int factorial(int n);
int main()
{
    int n;
    cout<<"Ingresar el nÃºmero:"<<endl;
    cin>>n;
    cout<<"El factorial de n es:"<<factorial(n)<<endl;
    return 0;
}
int factorial (int n){
    if(n==0)
         return 1;
    else{
        return n*factorial(n-1);
        cout<<"Valor de n:"<<n;
    }
}
